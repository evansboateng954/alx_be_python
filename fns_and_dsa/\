FAHRENHEIT_TO_CELSIUS_FACTOR = 5/9
CELSIUS_TO_FAHRENHEIT_FACTOR = 9/5

def convert_to_celsius(fahrenheit):
    global FAHRENHEIT_TO_CELSIUS_FACTOR
    return FAHRENHEIT_TO_CELSIUS_FACTOR * fahrenheit

def convert_to_fahrenheit(celsius):
    global CELSIUS_TO_FAHRENHEIT_FACTOR
    return CELSIUS_TO_FAHRENHEIT_FACTOR * celsius

temp = int(input("Enter the temperature to convert: "))
unit = input("Is this temperature in Celsius or Fahrenheit? (C/F): ")

if unit == "C":
    print(f"{temp}째C is {convert_to_fahrenheit(temp)}째F")

elif unit == "F":
    print(f"{temp}째F is {convert_to_celsius(temp)}째C")

else:
    print("nvalid temperature")
